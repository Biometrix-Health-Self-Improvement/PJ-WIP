<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".ScrollingActivity"
    android:backgroundTint="#e032f0">
    <!--Scrollframe-->
<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin"
    android:orientation="vertical">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin" android:text="@string/q1"
        android:id="@+id/q1"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/a1"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:hint="@string/h1"
        android:inputType="text"
        android:layout_gravity="top"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp" />

    <Button android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submitbutt"
        android:textSize="25dp"
        android:background="#2c0d41"
        android:textColor="#e3fffd"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
</android.support.v4.widget.NestedScrollView>
